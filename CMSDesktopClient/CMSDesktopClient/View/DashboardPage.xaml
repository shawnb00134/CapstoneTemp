<Page
    x:Class="CMSDesktopClient.View.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CMSDesktopClient.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="100" Stroke="White" VerticalAlignment="Top" Width="1921" FocusVisualSecondaryBrush="White" Fill="#FF6EC1E4" FocusVisualPrimaryBrush="White"/>
        <Image HorizontalAlignment="Left" Height="66" Margin="10,13,0,0" VerticalAlignment="Top" Width="866" Source="/Assets/ShofTechLogo.png"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="50">
            <Button Height="125" Width="125" Background="#FF8D4CC2" BorderBrush="#FF8D4CC2" FocusVisualPrimaryBrush="{x:Null}" FocusVisualSecondaryBrush="{x:Null}" Foreground="White" Click="Button_Click">
                <StackPanel>
                    <Image Source="/Assets/People.jpg" Width="74" Height="74" Margin="0,0,0,5"/>
                    <TextBlock Text="People" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Height="125" Width="125" Background="#FF8D4CC2" Click="Button_Click_1">
                <StackPanel>
                    <Image Source="/Assets/Organization.jpg" Width="74" Height="74" Margin="0,0,0,5"/>
                    <TextBlock Text="Organization" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Height="125" Width="125" Background="#FF8D4CC2" Click="Button_Click_2">
                <StackPanel>
                    <Image Source="/Assets/CAM-Studio.jpg" Width="74" Height="74" Margin="0,0,0,5"/>
                    <TextBlock Text="CAM Studio" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
